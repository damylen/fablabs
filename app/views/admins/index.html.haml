- title "Manage Admins"
.row
  .col-lg-12
    = render "labs/breadcrumbs", lab: @lab
.row
  .col-lg-12

    %h4 Uneditable Admins
    = render @admins

    %h4 Admins
    = render @lab_admins, admin: true

    %h4 Users
    = form_tag request.path do
      .row.collapse
        .col-lg-10= select_tag :user_id, options_for_select(@potential_lab_admins.map{|a| [a.first_name, a.id]})
        .col-lg-2= submit_tag "Make Admin"

